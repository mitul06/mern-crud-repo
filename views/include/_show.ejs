<% for(var i=0; i < rest.length; i++) { %>

<tr>
    <td><%= i+1 %></td>
    <td><%= rest[i].restname %></td>
    <td><%= rest[i].optime %></td>
    <td><%= rest[i].cltime %></td>
    <td><%= rest[i].restfood %></td>
    <td>
        <a href="update-rest?id=<%= rest[i]._id %>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id="<%= rest[i]._id %>" >
            <span class="text-gradient"><i class="fas fa-trash"></i></span>
        </a>
    </td>
</tr>

<% } %>